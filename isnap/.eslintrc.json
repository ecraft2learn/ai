{
    "env": {
        "browser": true
    },
    "extends": "eslint:recommended",
    "rules": {
        "semi": [
            "error",
            "always"
        ],
        "indent": [
            "warn",
            4
        ],
        "quotes": [
            "warn",
            "single",
            "avoid-escape"
        ],
        "max-len": [
            "warn",
            80
        ],
        "no-trailing-spaces": [
            "warn"
        ],
        "no-unused-vars": [
            "warn",
            { "args": "none" }
        ],
        "comma-spacing": [
            "warn",
            { "before": false, "after": true }
        ],
        "space-infix-ops": [
            "warn"
        ],
        "no-console": [
            "warn"
        ],
        "no-undef": "off",
        "no-fallthrough": "off"
    }
}